<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- invisible asset_category_id field in account invoice form-->
  <record id="telco_acc_inv_asset_category_form_view" model="ir.ui.view">
      <field name="name">telco account invoice asset category form</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id"
          ref="account_asset.view_invoice_asset_category"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='asset_category_id']"
            position="attributes">
            <attribute name='invisible'>1</attribute>
        </xpath>
      </field>
  </record>

</odoo>
