<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--
    QWeb Reports see parameter description at
    https://www.odoo.com/documentation/14.0/reference/reports.html
-->

    <!-- paper format -->
    <record id="paperformat_x_purchase_material_balance" model="report.paperformat">
      <field name="name">x Material Balance</field>
      <field name="default" eval="True" />
      <field name="format">A4</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">40</field>
      <field name="margin_bottom">50</field>
      <field name="margin_left">10</field>
      <field name="margin_right">10</field>
      <field name="header_line" eval="False" />
      <field name="dpi">90</field>
    </record>

    <record id="action_report_x_purchase_material_balance" model="ir.actions.report">
      <field name="name">Material Balance</field>
      <field name="model">purchase.order</field>
      <field name="report_type">qweb-html</field>

      <!-- <template id="report_material_balance"> -->
      <field name="report_name">x_purchase.report_material_balance</field>
      <field name="report_file">x_purchase.report_material_balance</field>
      <field name="binding_model_id" ref="model_purchase_order"/>
      <field name="binding_type">report</field>
    </record>

</odoo>
