<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="telco_workorder_form_view" model="ir.ui.view">
    <field name="name">Telco Workorder Form</field>
    <field name="model">telco.workorder</field>
    <field name="arch" type="xml">

          <form string="Telco Workorder" delete="false" create="false" edit="false">
            <sheet string="Telco Workorder">
              <div>
                <h1>
                  <field name="name" nolabel="1" readonly="1"/>
                </h1>
              </div>
              <div class="oe_button_box" name="button_box">

                <button name="open_stock_picking_incoming"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-history">
                  <field name="cont_stock_picking_incoming" widget="statinfo" string="Incoming"/>
                </button>

                <button name="open_stock_picking_outgoing"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-history">
                  <field name="cont_stock_picking_outgoing" widget="statinfo" string="Outgoing"/>
                </button>

              </div>
              <group col="2">
                <group string="Customer Details">
                  <field name="customer" readonly="1"/>
                  <field name="service_ref1" readonly="1"/>
                  <field name="service_ref2" readonly="1"/>
                  <field name="noc_case_id" readonly="1"/>
                </group>
                <group string="Other Details">
                  <field name="sap_network" readonly="1"/>
                  <field name="status" readonly="1"/>
                  <field name="crm_id" readonly="1"/>
                </group>
              </group>
              <notebook>
                <page string="Description">
                  <field name='description' nolabel="1" 
                    readonly="1"
                    placeholder="Description of Work Order ......."/>
                </page>
              </notebook>
            </sheet>

          </form>

      </field>
    </record>
</odoo>
