<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="telco_workorder_form_view" model="ir.ui.view">
    <field name="name">Telco Workorder Form</field>
    <field name="model">telco.workorder</field>
    <field name="arch" type="xml">

          <form string="Telco Workorder">
            <sheet string="Telco Workorder">
              <div>
                <h1>
                  <field name="name" nolabel="1"/>
                </h1>
              </div>
              <group col="2">
                <group string="Customer Details">
                  <field name="customer"/>
                  <field name="service_ref1"/>
                  <field name="service_ref2"/>
                  <field name="noc_case_id"/>
                </group>
                <group string="Other Details">
                  <field name="sap_network"/>
                  <field name="state"/>
                </group>
              </group>
              <notebook>
                <page string="Description">
                  <field name='description' nolabel="1"
                    placeholder="Description of Work Order ......."/>
                </page>
              </notebook>
            </sheet>

            <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers"/>
              <field name="message_ids" widget="mail_thread"/>
            </div>

          </form>

      </field>
    </record>
</odoo>
