<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Full access to all record -->
        <record id="property_rule_workorder_manager" model="ir.rule">
            <field name="name">Telco WorkOrder Manager</field>
            <field name="model_id" ref="model_telco_workorder"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"
                eval="[(4, ref('group_telco_workorder_manager'))]"/>
        </record>

        <!-- access only record that employee field is user login -->
        <record id="property_rule_workorder_officer" model="ir.rule">
            <field name="name">Telco WorkOrder Officer</field>
            <field name="model_id" ref="model_telco_workorder"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_telco_workorder_officer'))]"/>
        </record>

    </data>
</odoo>
