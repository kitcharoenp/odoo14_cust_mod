<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Vendor created stock_picking -->
        <record id="stock_picking_rule_vendor_create" model="ir.rule">
            <field name="name">Vendor can create stock_picking</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="groups" eval="[(4, ref('x_purchase.group_purchase_vendor'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>   
        </record>

        <!-- Vendor can only read/write own created stock_picking -->
        <record id="stock_picking_rule_vendor_read" model="ir.rule">
            <field name="name">Vendor can only read/write own created stock_picking</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="groups" eval="[(4, ref('x_purchase.group_purchase_vendor'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/> 
            <field name="domain_force">[('create_uid','=',user.id)]</field>
        </record>

        <!-- Vendor created stock_move -->
        <record id="stock_move_rule_vendor_create" model="ir.rule">
            <field name="name">Vendor can create stock_move</field>
            <field name="model_id" ref="model_stock_move"/>
            <field name="groups" eval="[(4, ref('x_purchase.group_purchase_vendor'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/> 
             <!-- domain stock_picking -->
        </record>

        <!-- Vendor can only read/write own created stock_move -->
        <record id="stock_picking_rule_vendor_read" model="ir.rule">
            <field name="name">Vendor can only read/write own created stock_move</field>
            <field name="model_id" ref="model_stock_move"/>
            <field name="groups" eval="[(4, ref('x_purchase.group_purchase_vendor'))]"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/> 
            <field name="domain_force">[('create_uid','=',user.id)]</field>
        </record>


    </data>
</odoo>
