<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="telco_account_move_form_view" model="ir.ui.view">
      <field name="name">telco account move form</field>
      <field name="model">account.move</field>
      <field name="inherit_id"
          ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <!-- invisible product_id in Bill tab
        <xpath expr="//notebook/page[1]/field/tree/field[@name='product_id']"
            position="attributes">
            <attribute name='invisible'>1</attribute>
        </xpath>
        -->

        <!-- append Telco to Bill tab -->
        <xpath expr="//form/sheet/notebook/page[1]" position="after">
          <page string="Telco">
            <group>
              <group>
                <field name="x_service_order"/>
                <field name="x_circuit_id"/>
                <field name="x_sap_network"/>
              </group>
              <group colspan="2">
                  <field name="x_description"/>
              </group>
            </group>
          </page>
        </xpath>

      </field>
  </record>

</odoo>
