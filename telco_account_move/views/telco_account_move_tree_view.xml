<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- append x_description field after state field in account invoice tree -->
    <record id="telco_account_move_tree_view" model="ir.ui.view">
        <field name="name">TelcoAccountMoveTreeView</field>
        <field name="model">account.move</field>
        <field name="inherit_id"
            ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='state']"
              position="after">
              <field name="x_sap_network"/>
              <field name="x_description"/>
          </xpath>
        </field>
    </record>

</odoo>
